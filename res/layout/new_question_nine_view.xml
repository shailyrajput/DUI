<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/question_nine_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="85"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nine_question_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="What best describes how the police initially got involved in your case?"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/nine_first_option_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/nine_first_option_text1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:text="@string/answer_nine_option1"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nine_first_option_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:background="@drawable/textview_shape"
                            android:gravity="center"
                            android:hint="00:00"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/nine_option1_hint"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nine_second_option_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/nine_second_option_text1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:text="@string/answer_nine_option2"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nine_second_option_text2"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:background="@drawable/textview_shape"
                            android:gravity="center"
                            android:hint="00"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/nine_option2_hint"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nine_third_option_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/nine_third_option_text1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:text="@string/answer_nine_option3"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nine_third_option_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:background="@drawable/textview_shape"
                            android:gravity="center"
                            android:hint="00"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/nine_option3_hint"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nine_forth_option_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/nine_forth_option_text1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:text="@string/answer_nine_option4"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nine_forth_option_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:background="@drawable/textview_shape"
                            android:gravity="center"
                            android:hint="00"
                            android:textColor="#fff" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:button="@drawable/checkbox_selector"
                            android:checked="false"
                            android:padding="5dp"
                            android:text="@string/nine_option4_hint"
                            android:textColor="#fff"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nine_fivth_option_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/nine_fivth_option_text1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="2.5"
                            android:text="@string/answer_nine_option5"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/nine_fivth_option_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight=".5"
                            android:background="@drawable/textview_shape"
                            android:gravity="center"
                            android:hint="00"
                            android:textColor="#fff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="visible" >

            <Button
                android:id="@+id/prev_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back_btn" />

            <Button
                android:id="@+id/next_btn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/next_btn" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>